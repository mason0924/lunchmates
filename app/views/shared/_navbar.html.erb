  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item ">
          
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item ">
          <%= link_to "Events", events_path, class: "nav-link" %>
        </li>

        <li class="nav-item ">
          <%= link_to "Feelin lucky", lucky_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Create", new_event_path, class: "nav-link" %>
        </li>

        <li>
          <div class="nav-item" >
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </div>
        </li>
        
        <%= link_to edit_user_registration_path do %>
          <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, width: 200, height: 200, crop: :fill, class: "avatar dropdown-toggle"%>
            </li>
          <% end %>
          <% end %>
     <%#= link_to image_tag(current_user.photo.key, crop: :fit, class: "avatar dropdown-toggle", id: "navbarDropdown", data:), edit_user_registration_path %>

