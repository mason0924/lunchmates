<h2>Hosting (Events)</h2>

<div class="container">
    <% @events.each do |event| %>
        <div class="col-12 col-sm-6 col-md-3">
          <%= link_to event.event_name, event_path(event), class: "btn btn-info"  %>
          <p><%= event.restaurant_name %></p>
          <% if policy(event).edit? %>
            <%= link_to "Edit", edit_event_path(event), class: "btn btn-success" %>
          <% end %>
          <% if policy(event).destroy? %>
            <%= link_to "Remove", event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning" %>
          <% end %>
        </div>
    <% end %>
</div>


<h2>Joining (Bookings)</h2>

<div class="container mt-5">
  <% @bookings.each do |booking| %>
    <strong> <%= booking.event.event_name %> </strong>
    <%= booking.event.description %>
    <div class="col-3 border-left">
      <%= link_to "Unjoin", booking_path(booking), method: :delete %>
    </div>
  <% end %>
  <%= link_to 'Back', events_path, class: "btn btn-primary" %>
</div>

