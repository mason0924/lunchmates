<div class="container pt-4">
  <h2>Dashboard</h2>
  <div class="row pt-4">
    <div class="cards col-12">
      <h3>Hosting</h3>
        <% if current_user.events.empty? %>
        <p>You are not hosting any events!</p>
        <% end %>
          <% @events.each do |event| %>
            <%= link_to event_path(event) do  %>
              <div class="card-custom d-flex">
                <div class="fill">
                  <% if event.photos %>
                    <%= cl_image_tag event.photos.first.key, width: 100, heght: 100, crop: :fill %>
                  <% end %>
              </div>

            <div class="lockup">
              <h5><%= event.event_name %></h5>
              <p> At <%= event.restaurant_name %></p>
            <p class="date"> At <%= event.start_time.strftime("%e %b %Y %H:%M")%> - <%=event.end_time.strftime("%H:%M")%> </p>
           </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="cards col-12">
      <h3>Joining</h3>

        <% if current_user.bookings.empty? %>
          <p>You don't have any upcoming bookings!</p>
        <% end %>

      <% @bookings.each do |booking| %>
        <%= link_to event_path(booking.event) do  %>
          <div class="card-custom d-flex">
            <div class="fill">
              <% if booking.event.photos %>
                <%= cl_image_tag booking.event.photos.first.key, width: 100, heght: 100, crop: :fill %>
              <% end %>

            </div>
            <div class="lockup">
              <h5><%= booking.event.event_name %></h5>
              <p> At <%= booking.event.restaurant_name %></p>
            <p class="date"> At <%= booking.event.start_time.strftime("%e %b %Y %H:%M")%> - <%= booking.event.end_time.strftime("%H:%M")%> </p>
           </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>







