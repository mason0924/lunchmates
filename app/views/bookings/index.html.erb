
<div class="container mt-5">
    <% @bookings.each do |booking| %>
    <div class="row border mb-3 py-3">
      <div class="col-9">
        <p>Booked for: <%= booking.date %></p>
        <div class="d-flex ">
          <div class="d-flex flex-column mx-3 ">
          <strong> <%= booking.event.event_name %> </strong>
          <%= booking.event.description %>
          <br>
          <strong>Meet at: </strong>"<%= booking.event.restaurant_address %>""
          </div>
       </div>
    </div>

     <div class="col-3 border-left">
      <%= link_to "Remove", booking_path(booking), method: :delete %>
     </div>
   </div>
      <% end %>
</div>
