<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-6">
        <div class="position-relative back-btn">
          <%= link_to '', events_path(@event), class: "absolute-0-0"%>
          <%= '<i class="fas fa-chevron-left back-btn"></i>'.html_safe %>
        </div>
      <h1>Update the event</h1>
      <%= simple_form_for(@event) do |f| %>
          <%= f.input :event_name %>
          <%= f.input :description %>
          <%= f.input :restaurant_name %>
          <%= f.input :restaurant_address %>
          <%= f.input :restaurant_price_range %>
          <%= f.input :date %>
          <%= f.input :spots %>
          <%= f.button :submit, class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
