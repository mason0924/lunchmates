<div class="container">
  <div class="row">
    <div class="cards col-12" id="list">
      <%= form_tag events_path, method: :get, class: "homepage-form justify-content-center " do %>
        <label for="cuisine">Choose a cuisine:</label>
        <select id="cuisine" name="cuisine">
          <option value="Italian">Italian</option>
          <option value="Fast food">Fast food</option>
          <option value="Japanese">Japanese</option>
          <option value="Middle Eastern" selected>Middle Eastern</option>
          <option value="German">German</option>
          <option value="Vegetarian">Vegetarian</option>
          <option value="Indian">Indian</option>
          <option value="New American">New American</option>
        </select>
        <%#= submit_tag "Find your cuisine", class: "btn btn-custom mt-3" %>
        <button type="submit"><i class="fa fa-search "></i></button>
      <% end %>

    <% @events.each do |event| %>
      <%= link_to event_path(event) do  %>
        <div class="card-custom d-flex">
          <div class="fill">
            <% if event.photos.attached? %>
              <%= cl_image_tag event.photos.first.key, width: 100, height: 100, crop: :fill %>
            <% end %>
          </div>
          <!-- <img width="120" src="<%= image_path("logo.png") %>" alt="#"> -->
          <div class="lockup">
            <h5><%= event.event_name %></h5>
            <p> At <%= event.restaurant_name %></p>
          <p class="date"> At <%= event.start_time.strftime("%e %b %Y %H:%M")%> - <%=event.end_time.strftime("%H:%M")%> </p>
         </div>
        </div>
      <% end %>
    <% end %>
  <!-- </div> -->
    </div>

    <div
      id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>

  </div>
</div>

<div class="map-list">
  <button type="button" class="btn btn-map" id="map-list">Map</button>
</div>
