<div class="container">
  <%= link_to "Create", new_event_path, class: "btn btn-success" %>
  <div class="row">
    <% @events.each do |event| %>
        <div class="col-12 col-sm-6 col-md-3">
          <div class="card-custom d-flex">
            <div class="image">
              <% event.photos.each do |photo| %>
                 <%= cl_image_tag photo.key, width: 100, heght: 100, crop: :fill %>
                 <!-- find a way to cover without stretching images -->
              <% end %>
            </div>
            <!-- <img width="120" src="<%= image_path("logo.png") %>" alt="#"> -->
            <div class="lockup">
              <h5><%= event.event_name %></h5>
              <p> At <%= event.restaurant_name %></p>
             <%= link_to "Details", event_path(event), class: "btn btn-custom"  %>
           </div>
          </div>
        </div>
    <% end %>
  </div>
<div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
