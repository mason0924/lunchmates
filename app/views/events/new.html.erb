<div class="container justify-content-center">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-6">

    <h1>Create an event</h1>
    <%= simple_form_for(@event) do |f| %>
        <%= f.input :event_name %>
        <%= f.input :description %>
        <%= f.input :restaurant_name %>
        <%= f.input :restaurant_address %>
        <%= f.input :restaurant_price_range, collection: [["€", 1], ["€€", 2], ["€€€", 3]] %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :spots %>
        <%= f.button :submit, class: "btn btn-success" %>
    <% end %>
    <%= link_to 'Back', events_path, class: "btn btn-primary" %>
    </div>
    </div>
</div>
